<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="css/mystyle.css" type="text/css">

  <title>Chat Real Time</title>
</head>

<body>
  <div class="container mt-5">
    <div id="loginForm">
      
      <form class="form-inline d-flex justify-content-center">
        <div class="form-group">
          <label for="user_login" class="sr-only">user</label>
          <input type="text" class="form-control" id="user_login" placeholder="Please enter user name ...">
        </div>
        <button id="btnSubmit" type="button" class="btn btn-primary ml-3">Login</button>
      </form>
    </div>

    <div id="chatForm">
      <h3 class="d-flex justify-content-end p-3">
        Hello
        <span id="current_user" class="font-italic ml-2"></span>
      </h3>

      <div class="d-flex p-3">
        <div class="p-2 w-25 mr-1">
          <h5 class="text-center">Person online</h5>
          <ul class="list_user">
            <li class="user_in_list"></li>
          </ul>
        </div>
        <div class="p-2 w-75 ml-1" id="main_chat">
        </div>
      </div>

      <div class="d-flex justify-content-end p-3">
        <textarea class="mr-3 w-100" id="txt_chat"></textarea>
        <button id="btn_chat" type="button" class="btn btn-primary ml-3">send</button>
      </div>
    </div>

  </div>
  </div>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="js/jquery.slim.min.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/jquery.min.js"></script>
  <script src="https://realtimethach1.herokuapp.com/socket.io/socket.io.js"></script>
  <script src="js/handle.js"></script>

  <script>

  </script>
</body>

</html>